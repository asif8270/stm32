#include "stm32f4xx.h"

#define GPIOD_EN			(1U<<3)
#define PIN12				(1U<<12)
#define PIN14				(1U<<14)
#define LED_GREEN			PIN12
#define LED_RED				PIN14

void wait(int count);

int main(void)
{
	RCC->AHB1ENR |= GPIOD_EN;

	GPIOD->MODER |= (1U<<24);
	GPIOD->MODER &= ~(1U<<25);

	GPIOD->MODER |= (1U<<28);
	GPIOD->MODER &= ~(1U<<29);

	while(1)
	{
		GPIOD->BSRR |= LED_GREEN;
		wait(100000);

		GPIOD->BSRR |= GPIO_BSRR_BR12; //(1UL<<12)
		wait(100000);

		GPIOD->BSRR |= LED_RED;
		wait(100000);

		GPIOD->BSRR |= GPIO_BSRR_BR14; //(1U<<14)
		wait(100000);
	}
}

void wait(int count)
{
	volatile int i;
	for (i = 0; i < count; ++i) {}
}





