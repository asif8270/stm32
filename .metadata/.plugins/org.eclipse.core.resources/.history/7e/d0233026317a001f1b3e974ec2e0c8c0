#include "stm32f4xx.h"

#define GPIOA_EN			(1U<<0)
#define USART_EN			(1U<<17)

#define UART_TX_EN			(1U<<3)

void uart2_tx_init(void);

int main(void)
{



	while(1)
	{
	}
}

void uart2_tx_init(void)
{
	/********** Configuring the GPIOA **********/

	/*Enable clock access to the GPIOA*/
	RCC->AHB1ENR |= GPIOA_EN;

	/*Set the PA2 mode as Alternate Function*/
	GPIOA->MODER &= ~(1U<<4);
	GPIOA->MODER |= (1U<<5);

	/*Set PA2 the Alternate Function type to UART_TX (AF07) */
	GPIOA->AFR   |= (1U<<8);
	GPIOA->AFR   |= (1U<<9);
	GPIOA->AFR   |= (1U<<10);
	GPIOA->AFR   &= ~(1U<<11);

	/********** Configuring the UART **********/

	/*Enable clock access to the UART module*/
	RCC->APB1ENR |= USART_EN;

	/*Enable the UART module*/
	USART2->CR1  =

}





