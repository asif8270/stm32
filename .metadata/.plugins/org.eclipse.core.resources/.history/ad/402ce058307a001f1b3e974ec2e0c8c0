#include "stm32f4xx.h"

#define GPIOA_EN			(1U<<0)
#define USART_EN			(1U<<17)

#define PIN14				(1U<<14)
#define PIN0				(1U<<0)

void uart2_tx_init(void);

int main(void)
{



	while(1)
	{
	}
}

void uart2_tx_init(void)
{
	/*Enable clock access to the GPIOA*/
	RCC->AHB1ENR |= GPIOA_EN;
	RCC->APB1ENR |= USART_EN;

	/*Set the PA2 mdoe as Alternate Function*/
	GPIOA->MODER &= ~(1U<<4);
	GPIOA->MODER |= (1U<<5);

	/*Set PA2 the Alternate Function type to UART_TX (AF07) */
	GPIOA->AFR   |= (1U<<8);
	GPIOA->AFR   |= (1U<<9);
	GPIOA->AFR   |= (1U<<10);
	GPIOA->AFR   &= ~(1U<<11);

}





