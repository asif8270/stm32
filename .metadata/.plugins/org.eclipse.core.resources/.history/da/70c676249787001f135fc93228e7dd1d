#include "stm32f4xx.h"
#include "systick.h"

#define SYSTICK_LOAD_VAL	16000
#define SYSTICK_EN			(1U<<0)
#define SYSTICK_CLK_SRC		(1U<<2)
#define SYSTICK_COUNT_FLAG	(1U<<16)

void systickDelayMs(int delay)
{
	/**/
	SysTick->CTRL |= SYSTICK_EN;
}
